            "url": {
              "raw": "{{baseUrl}}/employees",
              "host": ["{{baseUrl}}"],
              "path": ["employees"]
            },
            "description": "Create a new employee record. TDS is automatically calculated based on country:\n- India: 10%\n- USA/United States: 12%\n- Others: 0%"
